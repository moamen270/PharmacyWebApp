@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<br /><br />
<div>
    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body  pt-5">
                                <h4 class="text-center">Register</h4>
                                <form  id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group my-3 col-6">
                                        <label asp-for="Input.FirstName"></label>
                                        <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" maxlength="100" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group my-3 col-6">
                                        <label asp-for="Input.LastName"></label>
                                            <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" maxlength="100" />
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group my-3 col-12">
                                        <label asp-for="Input.Email"></label>
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" maxlength="100" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group my-3 col-6">
                                        <label asp-for="Input.City"></label>
                                        <input asp-for="Input.City" class="form-control" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group my-3 col-6 ">
                                        <label asp-for="Input.State"></label>
                                        <input asp-for="Input.State" class="form-control" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.State" class="text-danger"></span>
                                    </div>
                                    <div class="form-group my-3 col-12">
                                        <label asp-for="Input.StreetAddress"></label>
                                        <input asp-for="Input.StreetAddress" class="form-control" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                    </div>
                                        <div class="form-group my-3 col-6">
                                            <label asp-for="Input.PostalCode"></label>
                                            <input asp-for="Input.PostalCode" class="form-control" autocomplete="username" aria-required="true" />
                                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                        </div>
                                    <div class="form-group my-3 col-12">
                                        <label asp-for="Input.PhoneNumber"></label>
                                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group my-3 col-6">
                                        <label asp-for="Input.Password "></label>
                                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />                                        
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group my-3 col-6">
                                        <label asp-for="Input.ConfirmPassword"></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />                                        
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <p class="form-group my-3">
                                        Already have account ? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                                    </p>
                                    <div class=" my-3">
                                        <button id="registerSubmit" type="submit" class="col-12 me-3 btn btn btn-primary">Register</button>
                                        <a asp-controller="Home" asp-action="Index" class="col-12  btn btn-secondary">Back</a>
                                    </div>
                                    <div class="form-group my-3">
                                    </div>
                                    </div>
                                </form>

                            </div>                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
