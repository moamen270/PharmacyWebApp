@model UserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<form method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>@Model.UserName</h2>
            Add/Remove Roles
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="UserId" />
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].IsSelected" type="checkbox" class="form-check-input" id="flexCheckIndeterminate" />
                    <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected" for="flexCheckIndeterminate">
                        @Model.Roles[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>