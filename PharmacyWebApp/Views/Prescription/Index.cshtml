@model IEnumerable<Prescription>
@{
    ViewData["Title"] = "Prescriptions";
}
<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Prescription List</h2>
        </div>
        <div class="col-6 text-end">
            <a onClick=Create("/Prescription/QuickCreate") class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp;Quick New Prescription</a>
            <a asp-action="Create" asp-controller="Prescription" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> &nbsp; New Prescription</a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            
            <th>
              CreationDateTime
            </th>
            
            <th>
                 Patient FirstName
            </th>
            <th>
                 dispensing
            </th>          
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {<tr>
            <th width=5%>
               @obj.CreationDateTime
            </th>
            <th width=10%>
              @obj.Patient.FirstName
            </th>
          
            <th width=10%>
                @obj.dispensing
            </th>
           

            <th width=5%>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Prescription" asp-action="Edit" asp-route-id="@obj.Id" class="btn  btn-sm btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>Edit</a>
                </div>
            </th>
            <th width=5%>
                <div class="w-75 btn-group" role="group">
                        <a onClick=Delete("/Prescription/Delete/@obj.Id") class="btn  btn-sm btn-primary mx-2">
                        <i class="bi bi-trash3"></i>Delete</a>
                </div>
            </th>
            <th width=5%>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Prescription" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-sm btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>Details</a>
                </div>
            </th>
        </tr>
        }
    </tbody>
</table>



@section Scripts{
    <script src="~/js/Prescription.js"></script>
}