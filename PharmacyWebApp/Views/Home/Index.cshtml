@{
    ViewData["Title"] = "Home Page";
}
@using PharmacyWebApp.DataAccess
@model IEnumerable<PharmacyWebApp.Models.Product>


<!-- banner -->
<section class="section pb-0">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-lg-7 text-center text-lg-left">
                <h1 class="mb-4" style="color:#375A64;">Medicines are the cure of everything</h1>
                <p class="mb-4" >  Search for your Medicine  here to get it ASAP </p>
                <form class="search-wrapper" asp-controller="Search" asp-action="Index">
                    <input id="search-by" name="s" type="search" class="form-control form-control-lg" placeholder="Search Here...">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <div class="col-lg-5 d-lg-block d-none">
                <img src="images/home/newbanner.png" alt="illustration" class="img-fluid rotate_back-animation">
            </div>     
        </div>
    </div>
</section>
<!-- /banner -->
<div class="row mt-3">
    <div class="col-12 m-b-30">
        <h4 class="d-inline">BEST SELLERS ON OUR PHARMANCY</h4>
        <br />
        <br />
        <div class="row">
            @foreach(var product in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-header bg-white">
                            <h6 class="card-title">@product.Name</h6>
                            <h7 class="card-subtitle mb-2 text-muted">@product.Brand.Name</h7>
                        </div>
                        @if(product.ProductPicture!= null)
                        {
                            <img class="shop-picture" src="data:image/*;base64,@(Convert.ToBase64String(product.ProductPicture))" alt="@product.Name">
                        }
                        else
                        {
                            <img class="shop-picture" src="~/images/Medicalll.png" alt="@product.Name">        
                        }                        
                        <div class="card-body">
                            <p class="card-text">Description: @product.Description</p>
                            <span>Price: @product.Price $</span>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-route-productid="@product.Id" class="btn btn-sm   btn-primary"><small>BuyNow!</small></a>
                            <a asp-controller="Product" asp-action="Details" asp-route-Id="@product.Id" class=" btn btn-sm btn-secondary"><small>Details</small></a>
                        </div>
                    </div>
                </div>
            }                      
        </div>  
    </div>
</div>


<div class="row mt-5">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title ">NEW FEATUERS ON FUTRUE </h1>
                <h3 class="card-title ">Book your Doctor from your house</h3>
                <div class="bootstrap-carousel">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner ">
                            <div class="carousel-item active">
                                <img class="d-block w-100"  src="images/home/slider/AskingDoctor.png" alt="First slide">
                            </div>
                            <div class="carousel-item ">
                                <img class="d-block w-100"  src="images/home/slider/LegBroken.png" alt="Second slide">
                            </div>
                            <div class="carousel-item ">
                                <img class="d-block w-100"   src="~/images/home/slider/Doctorsaround.png" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" style="background-color:#8c8c8c" href="#carouselExampleControls" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span> <span class="sr-only">Previous</span> </a>
                        <a class="carousel-control-next" style="background-color:#8c8c8c" href="#carouselExampleControls"
                        data-slide="next"><span class="carousel-control-next-icon"></span> <span class="sr-only">Next</span></a>
                    </div>
                </div>
            </div>
        </div>  
    </div>
</div>        
