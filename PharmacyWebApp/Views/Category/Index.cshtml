@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Catefory List</h2>
        </div>
        <div class="col-6 text-end">
            <a onClick =Create("/Category/Create") class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; New Category
            </a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <th width=20%>
                    @obj.Name
                </th>

                <th width=20%>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary w-50">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                    </div>
                </th>
                <th width=20%>
                    <div class="w-15 m-2 btn-group" role="group">
                        <a onClick=Delete("/Category/Delete/@obj.Id") class="btn  btn-primary mx-2">
                            <i class="bi bi-trash3"></i>Delete
                        </a>
                    </div>
                </th>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    <script src="~/js/Category.js"></script>
}