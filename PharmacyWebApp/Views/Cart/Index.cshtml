@model PharmacyWebApp.Models.ViewModels.ShoppingCartVM
<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="row">
                    <div class="col-6  pt-2">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Shopping Cart
                    </div>
                    <div class="col-6 text-end">
                        <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @foreach (var item in Model.ListCart)
                {
                    <div class="row">
                        <div class=" col-lg-2 col-sm-10 col-md-10 col-xs-10  text-center ">
                            <img class="rounded w-100 shopcart-picture" src="data:image/*;base64,@(Convert.ToBase64String(item.Product.ProductPicture))" alt="@item.Product.Name">
                        </div>
                        <div class="col-lg-3 mt-5">

                            <h5><strong>@item.Product.Name</strong></h5>
                            <p><small>@Html.Raw(item.Product.Description)</small></p>
                        </div>
                        <div class="col-lg-7">
                            <div class="row text-center mt-5 col-lg-12 col-sm-12 col-md-12 col-xs-12 ">

                                <div class="col-lg-5 col-md-12 mt-2 text-center ">
                                    <h6 class="text-center">
                                        <strong>
                                            @item.Product.Price.ToString("c")
                                            <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                        </strong>
                                    </h6>
                                </div>
                                <div class="col-lg-7 row">
                                    <div class="col-4">
                                        <a asp-action="plus" asp-route-cartId="@item.Id" role="group" class="btn btn btn-primary ">
                                            <i class="bi bi-plus-square"></i>
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a asp-action="minus" asp-route-cartId="@item.Id" role="group" class="btn btn btn-warning ">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a asp-action="remove" asp-route-cartId="@item.Id " role="group" class="btn btn btn-danger ">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>




                                </div>

                            </div>

                        </div>
                    </div>
                    <hr />
                }
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-info"> Total (USD)</span>
                                <strong class="text-info">@Model.OrderForHeader.OrderTotal.ToString("c")</strong>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="card-footer">
                <div class="row ">
                    <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                        <a asp-action="Buynow" class="btn btn-primary col-sm-12 col-lg-6 col-md-6  offset-md-6 ">BuyNow</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

