@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary" >
                <i class="bi bi-plus-circle-fill"></i> &nbsp; New Product</a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            <th>
              Product Name
            </th>            
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {<tr>
            <th width=20%>
              @obj.Name
            </th>
           
            <th width=20%>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>Edit</a>
                </div>
            </th>
            <th width=20%>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-trash3"></i>Delete</a>
                </div>
            </th>
        </tr>
        }
    </tbody>
</table>