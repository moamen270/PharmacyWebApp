@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a onClick=Create("/Product/Create") class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; New Product</a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            <th>
              Product Name
            </th>
            <th>
                 ListPrice
            </th>
            <th>
                 Price
            </th>
            <th>
                 Brand
            </th>
            <th>
                 Category
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {<tr>
            <th width=20%>
              @obj.Name
            </th>
                <th width=20%>
                    @obj.ListPrice
                </th>
                <th width=20%>
                    @obj.Price
                </th>
                <th width=20%>
                    @obj.Brand.Name
                </th>
                <th width=20%>
                    @obj.Category.Name
                </th>

            <th width=15%>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>Edit</a>
                </div>
            </th>
            <th width=15%>
                <div class="w-75 btn-group" role="group">
                        <a onClick=Delete("/Product/Delete/@obj.Id") class="btn btn-primary mx-2">
                        <i class="bi bi-trash3"></i>Delete</a>
                </div>
            </th>
            <th width=15%>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>Details</a>
                </div>
            </th>
        </tr>
        }
    </tbody>
</table>



@section Scripts{
    <script src="~/js/Product.js"></script>
}