@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row col-lg-12">
    <div class="col-lg-6 ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2 mt-2">
                <input asp-for="Input.FirstName" class="form-control"  />
                <label asp-for="Input.FirstName" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.PostalCode" class="form-control" />
                <label asp-for="Input.PostalCode" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.State" class="form-control"  />
                <label asp-for="Input.State" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.City" class="form-control" />
                <label asp-for="Input.City" class="form-label"></label>     
            </div>
            <br />
            
            <button did="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Save</button>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Input.ProfilePicture" class="w-100"></label>
                @if (Model.Input.ProfilePicture != null)
                {
                    <img id="profilePicture" alt="profile" class="profile-picture rounded-top" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" />
                }
                else
                {
                    <img id="profilePicture" alt="profile" class="profile-picture rounded-top" src="~/images/team/male_avatar.jpg" />
                }
                <div class="custom-file mt-2">
                    <label class="custom-file-label" asp-for="Input.ProfilePicture">Choose picture...</label>
                    <input type="file"
                           accept="image/*"
                           asp-for="Input.ProfilePicture"
                           class="custom-file-input"
                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                    
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    <br />
                    <br />
                   
                    <a asp-controller="Home" asp-action="Index" class="btn btnbtn-secondary rounded">Go Back</a>
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div class="row">

                <a asp-controller="Home" asp-action="Index" class="btn btnbtn-secondary rounded">Go Back</a>
            </div>


        </div>
    

  
</div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
