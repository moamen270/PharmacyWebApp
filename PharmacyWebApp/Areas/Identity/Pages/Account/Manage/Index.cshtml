@page
@model IndexModel
@{
 
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="">
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row ">
    
        <div class="col-lg-6">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating  mb-2">
                <input asp-for="Input.FirstName" class=" form-control"  />
                <label asp-for="Input.FirstName" class="ms-2 form-label"></label>
            </div>
            <div class="form-floating  mb-2">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="ms-2 form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="ms-2 form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="ms-2 form-label"></label>
            </div>
            
            <div class="form-floating mb-2">
                <input asp-for="Input.State" class="form-control"  />
                <label asp-for="Input.State" class="ms-2 form-label"></label>
            </div>
            <div class="form-floating  mb-2">
                <input asp-for="Input.City" class="form-control" />
                <label asp-for="Input.City" class="ms-2 form-label"></label>     
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.PostalCode" class="form-control" />
                <label asp-for="Input.PostalCode" class="ms-2 form-label"></label>
            </div>
           
            
        </div>
          
       
            <div class="col-lg-6 col-md-12 col-sm-12 col-sm-12">
                <div class="form-group">
                    <label asp-for="Input.ProfilePicture" class="w-100"></label>
                    @if (Model.Input.ProfilePicture != null)
                    {
                        <img id="profilePicture" alt="profile" class="profile-picture" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" />
                    }
                    else
                    {
                        <img id="profilePicture" alt="profile" class="profile-picture" src="~/images/avatar-male.jpg" />
                    }
                    <div class="col-auto custom-file mt-2">
                        <input type="file"
                               accept="image/*"
                               asp-for="Input.ProfilePicture"
                               class="custom-file-input"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <label class="custom-file-label" asp-for="Input.ProfilePicture">Choose picture...</label>
                        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
            <div class="col-12">
                             <button did="update-profile-button" type="submit" class="col-auto btn btn-lg btn-primary mb-2">Save</button>

            </div>
        </div>
    

  


                  
</form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
