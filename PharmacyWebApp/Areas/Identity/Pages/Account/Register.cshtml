@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<br /><br />
<br /><br />

<br /><br />
<br /><br />
<br /><br />
<div>
    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <h4 class="text-center">Register</h4>
                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group m-3">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />                                        
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-3">
                                        <label asp-for="Input.ConfirmPassword"></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />                                        
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <p class="form-group m-3">
                                           Already have account ? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                                     </p>
                                    <div class="row m-3">
                                        <button id="registerSubmit" type="submit" class="col-4 me-3 btn btn btn-primary">Register</button>
                                        <a asp-controller="Home" asp-action="Index" class="col-4  btn btn-secondary">Back</a>
                                    </div>
                                      <div class="form-group m-3">
                                       
                                       
                                      
                                    </div>
                                </form>
                            </div>                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
